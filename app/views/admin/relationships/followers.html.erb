<div class="containar mt-3">
  <div class="row">

    <div class="col-md-3 offset-md-1">
      <%= render 'admin/users/info', user: @user %>
    </div>

    <div class="col-md-8">
      <h2>"<%= @user.name %>"フォロワー一覧</h2>
      <% if @users.exists? %>
        <%= render 'admin/users/user.index', users: @users %>
      <% else %>
        <p>※フォロワーはまだいません</p>
      <% end %>
    </div>

  </div>
</div>