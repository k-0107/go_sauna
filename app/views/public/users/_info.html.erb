<h4 class="ml-3"><i class="fa-solid fa-fire-flame-curved"></i> 会員情報</h4>
<div class="text-center mb-2">
  <i class="fa-solid fa-user"></i> <%= image_tag user.get_profile_image(100,100) ,class:"mr-4 rounded" %>
  <i class="fa-solid fa-bottle-droplet"></i> <%= image_tag user.get_favorite_drink_image(100,100),class:"rounded" %>
</div>

<table class="table">
  <tr>
    <td noWrap>ユーザーネーム</td>
    <td><%= link_to user.name, user_path(user) %></td>
  </tr>
  <tr>
    <td>自己紹介</td>
    <td><%= user.introduction %></td>
  </tr>
  <tr>
    <td>お気に入り<br>ドリンク</td>
    <td><%= user.favorite_drink %></td>
  </tr>
  <tr>
    <td>フォロー数</td>
    <td class="following_count-<%= user.id %>"><%= render "public/relationships/following_count", user: user %></td>
  </tr>
  <tr>
    <td>フォロワー数</td>
    <td class="follower_count-<%= user.id %>"><%= render "public/relationships/follower_count", user: user %></td>
  </tr>
</table>
<div class="row d-flex flex-column">
  <% if current_user == user %>
    <%= link_to "新規投稿", new_post_sauna_path, class:"btn my-4 mx-5 new_post" %>
    <%= link_to "いいね一覧", liked_post_saunas_user_path(current_user), class:"badge info my-2 mx-5" %>
    <%= link_to "ユーザー情報編集", users_information_edit_path(user), class:"badge info my-2 mx-5" %>
  <% else %>
    <div class="d-flex flex-column" id="follow-contents-<%= user.id %>">
      <%= render "public/relationships/btn", user: user, options: { class: ""} %>
    </div>
    <%= link_to "いいね一覧", liked_post_saunas_user_path(user), class:"btn info my-2 mx-5" %>
  <% end %>
</div>

