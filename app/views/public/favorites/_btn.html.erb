<% if post_sauna.favorited_by?(current_user) %>
  <%= link_to post_sauna_favorite_path(post_sauna), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= post_sauna.favorites.count %> いいね <i class="fa-solid fa-thumbs-up"></i>
  <% end %>
<% else %>
  <%= link_to post_sauna_favorite_path(post_sauna), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post_sauna.favorites.count %> いいね <i class="fa-solid fa-thumbs-up"></i>
  <% end %>
<% end %>
